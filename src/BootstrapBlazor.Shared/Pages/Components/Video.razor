@inject IOptions<WebsiteOptions> Options
@inject IStringLocalizer<Video> Localizer

<p><b>@Localizer["Title"]</b></p>

@if (string.IsNullOrEmpty(VideoUrl))
{
    <div class="mb-3">@Localizer["D1"]</div>
}
else
{
    <a class="fa fa-video-camera mb-3" href="@VideoUrl" target="_blank"><span class="ms-2">@Localizer["D2"]</span></a>
}

@code {
    [NotNull]
    private string? VideoUrl { get; set; }

    [Parameter]
    public string? Name { get; set; }

    /// <summary>
    ///
    /// </summary>
    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (!string.IsNullOrEmpty(Name) && Options.Value.Videos.TryGetValue(Name, out var url))
        {
            VideoUrl = $"{Options.Value.VideoUrl}{url}";
        }
    }
}
